# Cognite Data Fusion Configuration
CDF_HOST=https://westeurope-1.cognitedata.com
CDF_PROJECT=your-project
CDF_CLIENT_ID=your-client-id
CDF_CLIENT_SECRET=your-client-secret
CDF_TOKEN_URL=https://your-auth0.auth0.com/oauth/token

# Plex API Configuration
PLEX_API_KEY=your-plex-api-key
PLEX_CUSTOMER_ID=340884

# Plex Data Source API Credentials (for Quality Extractor)
# Request these from Plex Customer Care
PLEX_DS_USERNAME=your-datasource-username
PLEX_DS_PASSWORD=your-datasource-password
PLEX_USE_TEST=false  # Set to true to use test environment

# Facility Information
FACILITY_NAME=Main Manufacturing Plant
FACILITY_CODE=MMP

# CDF Dataset IDs (run setup_datasets.py to get these)
CDF_DATASET_PLEXPRODUCTION=
CDF_DATASET_PLEXSCHEDULING=
CDF_DATASET_PLEXQUALITY=
CDF_DATASET_PLEXINVENTORY=
CDF_DATASET_PLEXMAINTENANCE=
CDF_DATASET_PLEXMASTER=

# Extraction Configuration
EXTRACTION_START_DATE=2024-01-01T00:00:00Z
EXTRACTION_INTERVAL=300  # seconds (5 minutes)
BATCH_SIZE=1000
MAX_RETRIES=3

# Extractor-specific Intervals (in seconds)
MASTER_EXTRACTION_INTERVAL=86400    # Daily (24 hours)
JOBS_EXTRACTION_INTERVAL=300        # Every 5 minutes
PRODUCTION_EXTRACTION_INTERVAL=300  # Every 5 minutes
INVENTORY_EXTRACTION_INTERVAL=300   # Every 5 minutes
QUALITY_EXTRACTION_INTERVAL=300     # Every 5 minutes

# Quality Extractor Configuration
QUALITY_EXTRACTION_START_DATE=2024-01-01T00:00:00Z
QUALITY_DAYS_BACK=30  # How many days of historical data to fetch
QUALITY_BATCH_SIZE=1000

# Optional: Specific IDs to track (leave empty to fetch all)
# If empty, extractors will automatically fetch ALL resources for the PCN
WORKCENTER_IDS=
CONTAINER_IDS=
LOCATION_IDS=

# API Rate Limiting
PLEX_API_RATE_LIMIT=100  # Requests per minute
PLEX_API_CONCURRENT=5    # Concurrent connections

# Logging
LOG_LEVEL=INFO